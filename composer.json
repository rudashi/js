{
    "name": "rudashi/js",
    "description": "PHP arrays in JavaScript style",
    "license": "MIT",
    "version": "1.0.0",
    "type": "library",
    "keywords": [
        "php",
        "js",
        "php2js"
    ],
    "authors": [
        {
            "name": "Borys Å»muda",
            "email": "rudashi@gmail.com",
            "homepage": "https://rudashi.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23.1",
        "friendsofphp/php-cs-fixer": "^3.64.0",
        "pestphp/pest": "^3.0.0",
        "phpstan/phpstan": "^1.12.0",
        "rector/rector": "^1.2.4"
    },
    "autoload": {
        "psr-4": {
            "Rudashi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer",
        "test:lint": "php-cs-fixer check src --show-progress=dots -vvv",
        "test:refactor": "rector --dry-run",
        "test:types": "phpstan analyse",
        "test:arch": "pest --filter=arch",
        "test:type-coverage": "pest --coverage --min=100",
        "test:unit": "pest --testsuite=Unit",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:types",
            "@test:arch",
            "@test:type-coverage",
            "@test:unit"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}